{
    "restartable": "rs",
    "ignore": [
      ".git",
      "node_modules/**/node_modules"
    ],
    "verbose": true,
    "exec": "ts-node src/server.ts",
    "events": {
      "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
    },
    "watch": [
      "src/",
      "tsconfig.json"
    ],
    "env": {
      "NODE_ENV": "development"
    },
    "ext": "ts,json"
  }
